  <xsd:import namespace="http://www.eclipse.org/bird_model" schemaLocation="bird_model.xsd"/>
  <xsd:import namespace="http://www.eclipse.org/emf/2002/Ecore" schemaLocation="../../org.eclipse.emf.ecore/model/Ecore.xsd"/>
  <xsd:import namespace="http://www.eclipse.org/transformation" schemaLocation="transformation.xsd"/>
  <xsd:annotation>
    <xsd:documentation> This package describes NavigationContext, used to tie together a set of artifacts with tags and requiremnts </xsd:documentation>
